<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Dashboard - NiceAdmin Bootstrap Template</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->

    <link href="~/Templates/Admin/img/favicon.png" rel="icon">

    <link href="~/Templates/Admin/img/favicon.png" rel="icon">
    <link href="~/Templates/Admin/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

    <partial name="_StylePartial" />


</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="logo d-flex align-items-center">
                <img src="~/Templates/Admin/img/logo.png" alt="">
                <span class="d-none d-lg-block">XEUBlog ADMIN</span>
            </a>
            <i @*class="bi bi-list toggle-sidebar-btn"*@></i>
        </div><!-- End Logo -->



        <nav class="header-nav ms-auto">
            
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link" >
                    <i class="bi bi-grid"></i>
                    <span>ANASAYFA</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a  class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse">
                    <i class="bi bi-flag"></i><span>Kategoriler</span>
                </a>
                <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-area="Admin" asp-controller="Category" asp-action="List">
                            <i class="bi bi-circle"></i><span>Kategori Ekle</span>
                        </a>
                    </li>
                    


                </ul>
            </li><!-- End Components Nav -->

            <li class="nav-item">
                <a  class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" >
                    <i class="bi bi-mic"></i><span>Blog Yazılar</span><i class=" ms-auto"></i>
                </a>
                <ul id="forms-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-area="Admin" asp-controller="Post" asp-action="List">
                            <i class="bi bi-circle"></i><span>Yazı Ekle</span>
                        </a>
                    </li>
                    

                </ul>
            </li><!-- End Forms Nav -->

            <li class="nav-item">
                <a   class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse">
                    <i class="bi bi-headphones"></i><span>Haberler</span><i class="bi bi-dj ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-area="Admin" asp-controller="News" asp-action="List">
                            <i class="bi bi-circle"></i><span>Haber Ekle</span>
                        </a>
                    </li>
                    
                </ul>
            </li><!-- End Tables Nav -->



            

            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index"  class="nav-link collapsed">
                    <i class="bi bi-card-list"></i>
                    <span>Sayfaya Git</span>

                </a>
            </li><!-- End Register Page Nav -->

            <li class="nav-heading">Admin</li>

            

            

            <li class="nav-item">
                <a   class="nav-link collapsed" data-bs-target="#charts-nav" data-bs-toggle="collapse" >
                    <i class="bi bi-people"></i><span>Admin Profil</span><i class=" ms-auto"></i>
                </a>
                <ul id="charts-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-area="Admin" asp-controller="MyProfile" asp-action="Edit" asp-route-id="1">
                            <i class="bi bi-circle"></i><span>Profil Düzenle</span>
                        </a>
                    </li>
                    

                </ul>
            </li><!-- End Charts Nav -->

            


            <li class="nav-item">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Logout" class="nav-link collapsed">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Çıkış Yap</span>
                </a>
            </li><!-- End Login Page Nav -->



        </ul>

    </aside><!-- End Sidebar-->
    <!-- ======= Main ======= -->
    @*<partial name="_MainPartial" />*@


    <div style="margin-top:80px;margin-left:330px">


        @RenderBody()

    </div>








    @*<partial name="_DetailModalPartial" />*@

    <!-- ======= Footer ======= -->
    <partial name="_FooterPartial" />



    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>




    <!-- ======= Script ======= -->
    <partial name="_ScriptPartial" />

    @*@await RenderSectionAsync("Scripts" , required:false)*@

</body>

</html>