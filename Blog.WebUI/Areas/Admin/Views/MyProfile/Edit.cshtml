@model MyProifleEditVM


<div class="container" style="padding-top:40px">

    <div class="row">

        <div class="col-md-8 offset-2">

            <div class="card" style="border:solid 2px">

                <div class="card-header fw-bold fs-5" style="text-align:center">

                    <p class="text-bg-light">

                        PROFİL DÜZENLEME FORMU

                    </p>
                </div>


                <div class="card-body">

                    <form method="post" asp-area="Admin" asp-controller="MyProfile" asp-action="Edit" >



                        <input asp-for="Id" type="hidden" />

                        <div class="form-group mb-2">

                            <label asp-for="Name"></label>

                            <input asp-for="Name" class="form-control" type="text" />

                            <span asp-validation-for="Name" class="text-danger fw-bold"></span>

                        </div>

                        <div class="form-group mb-2">

                            <label asp-for="LastName"></label>

                            <input asp-for="LastName" class="form-control" type="text"/>

                            

                            <span asp-validation-for="LastName" class="text-danger fw-bold"></span>

                        </div>


                        <div class="form-group mb-2">

                            <label asp-for="InstagramUrl"></label>

                            <input asp-for="InstagramUrl" class="form-control" type="text" />

                            <span asp-validation-for="InstagramUrl" class="text-danger fw-bold"></span>

                        </div>


                        <div class="form-group mb-2">

                            <label asp-for="GithubUrl"></label>

                            <input asp-for="GithubUrl" class="form-control" type="text"/>

                            <span asp-validation-for="GithubUrl" class="text-danger fw-bold"></span>

                        </div>

                        <div class="form-group mb-2">

                            <label asp-for="LinkedInUrl"></label>

                            <input asp-for="LinkedInUrl" class="form-control" type="text" />

                            <span asp-validation-for="LinkedInUrl" class="text-danger fw-bold"></span>

                        </div>

                        <div class="form-group mb-2">

                            <label asp-for="Description"></label>

                            <textarea asp-for="Description" class="form-control">

                            </textarea>

                            <span asp-validation-for="Description" class="text-danger fw-bold"></span>

                        </div>


                        

                        <button type="submit" class="btn btn-success mt-3 float-end">

                            Düzenle

                        </button>

                    </form>

                </div>

            </div>
        </div>

    </div>

</div>