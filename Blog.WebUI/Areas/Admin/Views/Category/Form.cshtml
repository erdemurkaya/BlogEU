@model CategoryAddOrEditVM

<div class="container" style="padding-top:40px">

    <div class="row">

        <div class="col-md-8 offset-2">

            <div class="card" style="border:solid 1px">

                <div class="card-header fw-bold fs-5" style="text-align:center;">

                    <p class="text-bg-light">

                        <span>

                            @(Model.Id == 0 ? "Kategori Ekleme Formu" : "Kategori Düzenleme Formu")

                        </span>

                    </p>

                </div>


                <div class="card-body">

                    <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Save" >

                        
                        <input asp-for="Id" type="hidden" />
                       

                        <div class="form-group mb-2">

                            <label asp-for="Name"></label>

                            <input asp-for="Name" class="form-control" type="text" />

                            <span asp-validation-for="Name" class="text-danger fw-bold"></span>

                        </div>

                       


                        <div class="form-group mb-2">

                            <label asp-for="Description"></label>

                            <textarea asp-for="Description"  class="form-control" type="text">

                            </textarea>

                            <span asp-validation-for="Description" class="text-danger fw-bold"></span>

                        </div>



                        <button type="submit" class="btn btn-success mt-3 float-end">

                            @(Model.Id == 0 ? "Kaydet" : "Güncelle")


                        </button>

                    </form>

                </div>

            </div>
        </div>

    </div>

</div>
